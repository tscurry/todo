{
  "name": "todo-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "client": "cd client && npm run dev -- --host",
    "server": "node server/server.ts",
    "lint:client": "eslint ./client/**/*.{ts,tsx}",
    "lint:server": "eslint ./server/**/*.ts",
    "lint": "eslint .",
    "format": "prettier --check 'client/src' 'server/'",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.16.0",
    "vite": "^5.3.1"
  },
  "lint-staged": {
    "server/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "client/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}